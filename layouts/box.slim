  a href=link_for(@item)
    img src=minithumbnail_for(@item) alt="" title=@item[:imgtitle]
    .info
      h2
        = @item[:title]
        - if @item[:tags].include?("fav")
          img.pre src="/assets/icons/star.svg"
        - if @item[:url]
          img.post src="/assets/icons/external-link.svg"
      - if @item[:subtitle]
        h3
          = @item[:subtitle]
          br
      - if @item[:published]
        .meta
          = @item[:published].year
